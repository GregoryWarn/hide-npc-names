<form autocomplete="off" onsubmit="event.preventDefault()">
    <h2><i class="fas fa-mask"></i> {{localize "ActorForm.Title"}}</h4>
    <div>
        {{localize "ActorForm.TokenDisposition"}}{{dispositionString}}
        <p class="notes">{{localize "ActorForm.TokenDispositionHint"}}</p>
    </div>
    <div>
        {{localize "ActorForm.DefaultBehaviour"}}{{hideSettingString}}
        <p class="notes">{{localize "ActorForm.DefaultBehaviourHint"}}</p>
    </div>
    <div class="form-group">
        <label>{{localize "ActorForm.HiddenEnabled"}}</label>
        <input type="checkbox" name="hide-name" {{checked nameHidden}}>
        <p class="notes">{{localize "ActorForm.HiddenEnabledHint"}}</p>
    </div>
    <div class="form-group">
        <label>{{localize "ActorForm.ReplacementName"}}</label>
        <input type="text" name="replacement-name" value="{{replacementName}}">
        <p class="notes">{{localize "ActorForm.ReplacementHint"}}</p>
    </div>
    <footer style="display: flex;">
        <button type="button" name="save">{{localize "ActorForm.Save"}}</button>
        <button type="button" name="clear">{{localize "ActorForm.ClearOverrides"}}</button>
        <button type="button" name="cancel">{{localize "ActorForm.Cancel"}}</button>
    </footer>
</form>